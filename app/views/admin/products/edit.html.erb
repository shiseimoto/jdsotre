<h1> 编辑商品 </h1>

<%= simple_form_for [:admin,@product] do |f| %>

<%= f.input :title %>

<% if @product.image.present? %>
  <span>目前商品图</span> <br>
  <%= image_tag(@product.image.thumb.url) %>
<% end %>

<%= f.input :image %>
<%= f.input :description %>
<%= f.input :price %>
<%= f.input :quantity %>


  <%= f.submit "Submit" %>
<% end %>
