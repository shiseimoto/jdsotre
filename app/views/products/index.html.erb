
<div class="col-md-12">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名称</th>
        <th>商品描述</th>
        <th>价格</th>
        <th>库存数量</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>

          <td>
            <%= link_to(product.title, admin_product_path(product)) %>
          </td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
